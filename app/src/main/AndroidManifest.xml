<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="Biometric Attendance"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.BiometricAttendance">

        <!-- Splash screen is the launcher activity -->
        <activity
            android:name=".ui.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.BiometricAttendance.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Class list (main screen after splash) -->
        <activity
            android:name=".ui.ClassListActivity"
            android:exported="false" />

        <!-- Class detail screen -->
        <activity
            android:name=".ui.ClassDetailActivity"
            android:exported="false" />

        <!-- Class form screen -->
        <activity
            android:name=".ui.ClassFormActivity"
            android:exported="false" />

        <!-- Student detail screen -->
        <activity
            android:name=".ui.StudentDetailActivity"
            android:exported="false" />

        <!-- Student form screen -->
        <activity
            android:name=".ui.StudentFormActivity"
            android:exported="false" />

    </application>

</manifest>
